{
    "name": "Rapid Tags Comma Separator",
    "version": "0.0.3",
    "description": "Copy tags from rapidtags.io and paste them but with spaces after commas. Save time and hassle with our extension. Try it now!",
    "short_name": "ChromeComma", 
    "manifest_version": 3,
    "author": "Malik Elate",
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
      },
    "action":{
        "default_popup": "index.html",
        "default_title": "Rapid TagsComma Separator"
    }, 
    "host_permissions": [
      "https://rapidtags.io/"
    ],
    "content_scripts": [
        {
          "js": ["rapidtags.js"],
          "matches": ["https://rapidtags.io/*"]
        }
    ]
}
